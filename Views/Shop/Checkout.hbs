<div class="container top-of-50 bottom-of-50">
	<div class="card">
		<div class="card-header">
			<h3>
				Please fill the details and confirm order
			</h3>
		</div>
		<form action="/checkout" method="POST">
			<h5 name="amount">Total : {{totalPrice}}</h5>
			<div class="card-content row" style="padding: 10px;">
				<div class="form-group col-sm-6">
					<label for="usr">Your Name</label>
					<input type="text" name="c_name" class="form-control" id="usr" name="username">
				</div>
				<div class="form-group col-sm-6">
					<label for="usr">Your Email</label>
					<input type="text" name="email" class="form-control" id="usr" name="username">
				</div>
				<div class="form-group col-sm-12">
					<label for="addrss">Delivery Address</label>
					<textarea class="form-control" name="c_address" rows="5" id="address"></textarea>
				</div>
				<div class="form-group col-sm-12  text-right">
					<button type="submit" class="btn btn-outline-success">
						Buy now
					</button>
				</div>
			</div>
		</form>
	</div>
</div>